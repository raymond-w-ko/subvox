#!/usr/bin/env bash
set -euo pipefail

attr="${1:-}"
if [[ -z "${attr}" ]]; then
  printf "usage: %s <flake-attr> [extra nixos-rebuild args]\n" "$(basename "$0")" >&2
  printf "example: %s wsl2 --profile /nix/var/nix/profiles/system\n" "$(basename "$0")" >&2
  exit 64
fi

shift || true
sudo nixos-rebuild switch --flake ".#${attr}" "$@"
