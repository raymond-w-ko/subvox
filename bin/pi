#!/usr/bin/env sh

# Set to true to enable BD prime integration
ENABLE_BD=false

BD_ARGS=""
if [ "$ENABLE_BD" = "true" ]; then
  BD_PRIME="$(bd prime)"
  if [ -n "$BD_PRIME" ]; then
    BD_PRIME="
---
$BD_PRIME"
    BD_ARGS="--append-system-prompt $BD_PRIME"
  fi
fi

exec $HOME/src/pi-mono/packages/coding-agent/dist/cli.js \
  --models claude-opus-4-5,google/gemini-3-flash-preview,google/gemini-3-pro-preview,openai/gpt-5.2,z-ai/glm-4.7,minimax/minimax-m2.1 \
  --model claude-opus-4-5 \
  --thinking medium \
  $BD_ARGS \
  "$@"
