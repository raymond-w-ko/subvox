#!/usr/bin/env sh

BD_PRIME="$(bd prime)"
[ -n "$BD_PRIME" ] && BD_PRIME="
---
$BD_PRIME"

exec $HOME/src/pi-mono/packages/coding-agent/dist/cli.js \
  --models claude-opus-4-5,google/gemini-3-flash-preview,google/gemini-3-pro-preview,openai/gpt-5.2,z-ai/glm-4.7,minimax/minimax-m2.1 \
  --model claude-opus-4-5 \
  --thinking medium \
  --append-system-prompt "$BD_PRIME" \
  "$@"
